<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="62dp"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_gravity="center_horizontal"
    >

    <!-- OTP -->
    <EditText
        android:id="@+id/sec_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/security"
        android:drawablePadding="20dp"
        android:hint="Who is your first teacher?"
        android:padding="12dp"
        android:textColor="@color/black" />

    <!-- Information -->
    <TextView
        android:id="@+id/info_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sec_q"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Enter the correct answer inorder to recover the PIN"
        android:textColor="@color/black" />


    <!-- Verify button -->
    <Button
        android:id="@+id/validate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_text_1"
        android:layout_centerInParent="true"
        android:layout_margin="34dp"
        android:layout_weight="2"
        android:background="@drawable/button_bg"
        android:text="Validate"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <!-- Information about verification -->
    <TextView
        android:id="@+id/info_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/validate_btn"
        android:layout_marginTop="13dp"
        android:text=""
        android:textColor="#E30707"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>


</RelativeLayout>