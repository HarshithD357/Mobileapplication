<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="62dp"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_gravity="center_horizontal"
    >

    <EditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:hint="Enter 4-digit PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="12dp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pin"
        android:layout_centerInParent="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="34dp"
        android:layout_weight="2"
        android:background="@drawable/button_bg"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="36dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layou1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ok_btn"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/setup_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup PIN"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
           android:layout_marginRight="1dp"
            android:textAlignment="center"
            android:background="@drawable/text_link_bg"
            android:textColor="#019C35"
            android:textSize="22dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot PIN?"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:background="@drawable/text_link_bg"
            android:textColor="#E8E41041"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:id="@+id/msg"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layou1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        />




</RelativeLayout>